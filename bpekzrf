        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Навигация по разделам
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.content-section');
            
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    const sectionId = this.getAttribute('data-section');
                    
                    // Убираем активный класс у всех
                    navItems.forEach(nav => nav.classList.remove('active'));
                    sections.forEach(section => section.classList.remove('active'));
                    
                    // Добавляем активный класс текущему
                    this.classList.add('active');
                    document.getElementById(sectionId).classList.add('active');
                    
                    // Если переходим на главную, активируем анимацию пластинки
                    if (sectionId === 'home') {
                        const record = document.querySelector('.record');
                        record.style.animationPlayState = 'running';
                    }
                });
            });
            
            // Кнопки на главной
            document.querySelectorAll('.btn[data-section]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const sectionId = this.getAttribute('data-section');
                    
                    navItems.forEach(nav => nav.classList.remove('active'));
                    sections.forEach(section => section.classList.remove('active'));
                    
                    document.querySelector(`.nav-item[data-section="${sectionId}"]`).classList.add('active');
                    document.getElementById(sectionId).classList.add('active');
                });
            });
            
            // Переключение темы
            const themeToggle = document.getElementById('themeToggle');
            themeToggle.addEventListener('change', function() {
                if (this.checked) {
                    document.documentElement.classList.remove('theme-light');
                    document.documentElement.classList.add('theme-dark');
                } else {
                    document.documentElement.classList.remove('theme-dark');
                    document.documentElement.classList.add('theme-light');
                }
            });
            
            // Анимация пластинки при наведении на навигацию
            const record = document.querySelector('.record');
            
            navItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    record.style.animationDuration = '15s';
                });
                
                item.addEventListener('mouseleave', function() {
                    record.style.animationDuration = '20s';
                });
            });
            
            // Заполнение каталога
            const vinylGrid = document.querySelector('#catalog .vinyl-grid');
            vinylData.forEach(vinyl => {
                const card = document.createElement('div');
                card.className = 'vinyl-card';
                card.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" class="vinyl-image">
                    <div class="vinyl-info">
                        <h3 class="vinyl-title">${vinyl.album}</h3>
                        <p class="vinyl-artist">${vinyl.artist}</p>
                        <p class="vinyl-year">Год выпуска: ${vinyl.year}</p>
                        <p class="vinyl-genre">Жанр: ${vinyl.genre}</p>
                        <div class="vinyl-price">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                        <div class="status ${vinyl.status}">
                            ${vinyl.status === 'in-stock' ? 'В наличии' : 
                              vinyl.status === 'hunting' ? 'На охоте' : 
                              'Последний экземпляр'}
                        </div>
                        <button class="btn btn-primary add-to-cart" style="width: 100%; margin-top: 1rem;" data-id="${vinyl.id}">
                            <i class="fas fa-shopping-cart"></i> В корзину
                        </button>
                    </div>
                `;
                vinylGrid.appendChild(card);
            });
            
            // Форма оценки пластинки
            const conditionOptions = document.querySelectorAll('.condition-option');
            conditionOptions.forEach(option => {
                option.addEventListener('click', function() {
                    conditionOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            const vinylForm = document.getElementById('vinyl-form');
            const previewPrice = document.querySelector('.preview-price');
            
            vinylForm.addEventListener('submit', function(e) {
                e.preventDefault();
                this.style.display = 'none';
                previewPrice.style.display = 'block';
                
                // В реальном проекте здесь был бы AJAX запрос к серверу
                console.log('Форма отправлена');
            });
            
            // Заполнение умного вишлиста
            const huntingList = document.getElementById('hunting-list');
            const huntingVinyls = vinylData.filter(v => v.status === 'hunting');
            
            huntingVinyls.forEach(vinyl => {
                const li = document.createElement('li');
                li.innerHTML = `<i class="fas fa-search"></i> <strong>${vinyl.artist}</strong> - ${vinyl.album} (${vinyl.year})`;
                huntingList.appendChild(li);
            });
            
            // Заполнение рекомендаций
            const recGrid = document.querySelector('.recommendations .rec-grid');
            vinylData.slice(0, 4).forEach(vinyl => {
                const recCard = document.createElement('div');
                recCard.className = 'vinyl-card';
                recCard.style.transform = 'none';
                recCard.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" style="height: 150px; object-fit: cover;">
                    <div class="vinyl-info" style="padding: 1rem;">
                        <h4 style="font-size: 1rem; font-family: 'Playfair Display', serif;">${vinyl.album.substring(0, 20)}${vinyl.album.length > 20 ? '...' : ''}</h4>
                        <p style="font-size: 0.9rem;">${vinyl.artist}</p>
                        <div class="vinyl-price" style="font-size: 1.2rem;">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                    </div>
                `;
                recGrid.appendChild(recCard);
            });
            
            // Заполнение похожих пластинок
            const similarGrid = document.querySelectorAll('.rec-grid')[1];
            vinylData.slice(4, 8).forEach(vinyl => {
                const recCard = document.createElement('div');
                recCard.className = 'vinyl-card';
                recCard.style.transform = 'none';
                recCard.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" style="height: 150px; object-fit: cover;">
                    <div class="vinyl-info" style="padding: 1rem;">
                        <h4 style="font-size: 1rem; font-family: 'Playfair Display', serif;">${vinyl.album.substring(0, 20)}${vinyl.album.length > 20 ? '...' : ''}</h4>
                        <p style="font-size: 0.9rem;">${vinyl.artist}</p>
                        <div class="vinyl-price" style="font-size: 1.2rem;">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                    </div>
                `;
                similarGrid.appendChild(recCard);
            });
            
            // Заполнение пластинок других коллекционеров
            const collectorsGrid = document.querySelectorAll('.rec-grid')[2];
            vinylData.slice(2, 6).forEach(vinyl => {
                const recCard = document.createElement('div');
                recCard.className = 'vinyl-card';
                recCard.style.transform = 'none';
                recCard.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" style="height: 150px; object-fit: cover;">
                    <div class="vinyl-info" style="padding: 1rem;">
                        <h4 style="font-size: 1rem; font-family: 'Playfair Display', serif;">${vinyl.album.substring(0, 20)}${vinyl.album.length > 20 ? '...' : ''}</h4>
                        <p style="font-size: 0.9rem;">${vinyl.artist}</p>
                        <div class="vinyl-price" style="font-size: 1.2rem;">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                    </div>
                `;
                collectorsGrid.appendChild(recCard);
            });
            
            // Заполнение истории заказов
            const orderGrid = document.querySelector('#profile .vinyl-grid');
            vinylData.slice(0, 3).forEach(vinyl => {
                const card = document.createElement('div');
                card.className = 'vinyl-card';
                card.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" class="vinyl-image">
                    <div class="vinyl-info">
                        <h3 class="vinyl-title">${vinyl.album}</h3>
                        <p class="vinyl-artist">${vinyl.artist}</p>
                        <p class="vinyl-year">Год: ${vinyl.year}</p>
                        <div class="vinyl-price">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                        <div class="status in-stock">Куплено 15.03.2025</div>
                    </div>
                `;
                orderGrid.appendChild(card);
            });
            
            // Заполнение текущих охот
            const currentHunts = document.getElementById('current-hunts');
            vinylData.filter(v => v.status === 'hunting').forEach(vinyl => {
                const card = document.createElement('div');
                card.className = 'vinyl-card';
                card.innerHTML = `
                    <img src="${vinyl.image}" alt="${vinyl.album}" class="vinyl-image">
                    <div class="vinyl-info">
                        <h3 class="vinyl-title">${vinyl.album}</h3>
                        <p class="vinyl-artist">${vinyl.artist}</p>
                        <p class="vinyl-year">Год: ${vinyl.year}</p>
                        <div class="vinyl-price">${vinyl.price.toLocaleString('ru-RU')} ₽</div>
                        <div class="status hunting">В ожидании</div>
                    </div>
                `;
                currentHunts.appendChild(card);
            });
            
            // Включение анимации пластинки при загрузке главной
            const recordAnimation = document.querySelector('.record');
            recordAnimation.style.animationPlayState = 'running';
            
            // Звук при добавлении в корзину
            document.addEventListener('click', function(e) {
                if (e.target && (e.target.classList.contains('add-to-cart') || e.target.closest('.add-to-cart'))) {
                    const button = e.target.classList.contains('add-to-cart') ? e.target : e.target.closest('.add-to-cart');
                    const vinylId = button.getAttribute('data-id');
                    const vinyl = vinylData.find(v => v.id == vinylId);
                    
                    // Имитация звука добавления в корзину
                    const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    
                    oscillator.frequency.setValueAtTime(523.25, audioContext.currentTime); // Нота C
                    gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.2);
                    
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.2);
                    
                    // Визуальная обратная связь
                    const originalText = button.innerHTML;
                    button.innerHTML = '<i class="fas fa-check"></i> Добавлено!';
                    button.style.backgroundColor = '#4CAF50';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.backgroundColor = '';
                    }, 1500);
                    
                    // Уведомление
                    alert(`"${vinyl.album}" добавлен в корзину!`);
                }
            });
            
            // Винтажные тумблеры
            const toggleOptions = document.querySelectorAll('.toggle-option');
            toggleOptions.forEach(option => {
                option.addEventListener('click', function() {
                    toggleOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Фильтрация по жанру
                    const genre = this.textContent.toLowerCase();
                    const cards = document.querySelectorAll('#catalog .vinyl-card');
                    
                    cards.forEach(card => {
                        if (genre === 'все' || genre === 'all') {
                            card.style.display = 'block';
                        } else {
                            const cardGenre = card.querySelector('.vinyl-genre').textContent.toLowerCase();
                            if (cardGenre.includes(genre)) {
                                card.style.display = 'block';
                            } else {
                                card.style.display = 'none';
                            }
                        }
                    });
                });
            });
            
            // Слайдер года выпуска
            const yearSlider = document.querySelector('#catalog input[type="range"]');
            const yearValues = document.querySelectorAll('#catalog input[type="range"] + div span');
            
            if (yearSlider) {
                yearSlider.addEventListener('input', function() {
                    yearValues[1].textContent = this.value;
                    
                    // Фильтрация по году
                    const year = parseInt(this.value);
                    const cards = document.querySelectorAll('#catalog .vinyl-card');
                    
                    cards.forEach(card => {
                        const yearText = card.querySelector('.vinyl-year').textContent;
                        const cardYear = parseInt(yearText.match(/\d+/)[0]);
                        
                        if (Math.abs(cardYear - year) <= 10) { // +/- 10 лет
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            }
            
            // Добавление товаров в секции "Прочувствовать Винил" и "Мерч" в корзину
            document.addEventListener('click', function(e) {
                if (e.target && (e.target.classList.contains('add-to-cart-merch') || e.target.closest('.add-to-cart-merch'))) {
                    const button = e.target.classList.contains('add-to-cart-merch') ? e.target : e.target.closest('.add-to-cart-merch');
                    const itemName = button.getAttribute('data-name');
                    const itemPrice = button.getAttribute('data-price');
                    
                    // Имитация звука добавления в корзину
                    const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    
                    oscillator.frequency.setValueAtTime(659.25, audioContext.currentTime); // Нота E
                    gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.2);
                    
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.2);
                    
                    // Визуальная обратная связь
                    const originalText = button.innerHTML;
                    button.innerHTML = '<i class="fas fa-check"></i> Добавлено!';
                    button.style.backgroundColor = '#4CAF50';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.backgroundColor = '';
                    }, 1500);
                    
                    // Уведомление
                    alert(`"${itemName}" за ${itemPrice} добавлен в корзину!`);
                }
            });
            
            // Добавляем кнопки "В корзину" для товаров в новых секциях
            setTimeout(() => {
                // Для оборудования
                document.querySelectorAll('.equipment-item').forEach(item => {
                    const title = item.querySelector('h4').textContent;
                    const price = item.querySelector('.equipment-price').textContent;
                    const button = document.createElement('button');
                    button.className = 'btn btn-primary add-to-cart-merch';
                    button.style.marginTop = '0.5rem';
                    button.style.width = '100%';
                    button.style.fontSize = '0.9rem';
                    button.setAttribute('data-name', title);
                    button.setAttribute('data-price', price);
                    button.innerHTML = '<i class="fas fa-shopping-cart"></i> В корзину';
                    item.appendChild(button);
                });
                
                // Для средств ухода
                document.querySelectorAll('.care-item').forEach(item => {
                    const title = item.querySelector('h4').textContent;
                    const price = item.querySelector('.equipment-price').textContent;
                    const button = document.createElement('button');
                    button.className = 'btn btn-primary add-to-cart-merch';
                    button.style.marginTop = '0.5rem';
                    button.style.fontSize = '0.8rem';
                    button.style.padding = '0.4rem 0.8rem';
                    button.setAttribute('data-name', title);
                    button.setAttribute('data-price', price);
                    button.innerHTML = '<i class="fas fa-cart-plus"></i>';
                    item.appendChild(button);
                });
                
                // Для мерча
                document.querySelectorAll('.merch-item').forEach(item => {
                    const title = item.querySelector('h4').textContent;
                    const price = item.querySelector('.merch-price').textContent;
                    const button = document.createElement('button');
                    button.className = 'btn btn-primary add-to-cart-merch';
                    button.style.marginTop = '0.5rem';
                    button.style.fontSize = '0.8rem';
                    button.style.padding = '0.4rem 0.8rem';
                    button.setAttribute('data-name', title);
                    button.setAttribute('data-price', price);
                    button.innerHTML = '<i class="fas fa-cart-plus"></i> Купить';
                    item.appendChild(button);
                });
            }, 100);
        });
    </script>
</body>
</html>
